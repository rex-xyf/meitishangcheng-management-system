<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.EmployeeMapper">
    <resultMap id="text" type="Employee">

    </resultMap>
    <select id="selectAll" resultMap="text">
        select * from employee;
    </select>

    <insert id="add">
        insert into employee values(null,#{name},#{address},#{hourWages},#{department},#{workShifts});
    </insert>

    <select id="selectById" resultMap="text">
        select * from employee where id = #{id};
    </select>

    <select id="select" resultMap ="text">
         select * from employee
            <where>
                <if test="key=='name'">
                    name= #{value}
                </if>
                <if test="key=='address'">
                    address= #{value}
                </if>
                <if test="key=='hourWages'">
                    hourWages= #{value}
                </if>
                <if test="key=='department'">
                    department= #{value}
                </if>
                <if test="key=='workShifts'">
                    workShifts= #{value}
                </if>
            </where>
    </select>

    <update id="update">
        update employee set name=#{name},address=#{address},hourWages=#{hourWages},department=#{department},workShifts=#{workShifts} where id = #{id}
    </update>

    <delete id="delete">
        delete from employee where id = #{id}
    </delete>

    <delete id="deleteByIds">
        delete from employee where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
